{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/07015da9-b6d0-4cb6-be7f-10e8d923f088')]",
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/07015da9-b6d0-4cb6-be7f-10e8d923f088')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
            "kind": "Scheduled",
            "apiVersion": "2022-11-01-preview",
            "properties": {
                "displayName": "BR-01-CSB-MCA-I-U115",
                "description": "Monitor when the permissions or roles of a local account are elevated to administrator in the Skyhigh Security Cloud.\n\nIn the following path you will find the playbook that will help you process the security incident: xxxx",
                "severity": "Informational",
                "enabled": true,
                "query": "let Tiempo = ago(15m);\nMVisionLogs\n| where TimeGenerated >= Tiempo\n| where Activity == \"User information edited\"\n| where eventInfo contains \"Administrator\"\n| project-reorder TimeGenerated,SourceUserName,Activity,objectName,eventInfo\n| project-away More,userInfoFirstName,userInfoLastName,auditEventTypeEventTypeName,auditEventTypeEventCategoryId,DeviceEventClassID\n\n",
                "queryFrequency": "PT15M",
                "queryPeriod": "PT30M",
                "triggerOperator": "GreaterThan",
                "triggerThreshold": 0,
                "suppressionDuration": "PT5H",
                "suppressionEnabled": false,
                "startTimeUtc": null,
                "tactics": [
                    "PrivilegeEscalation"
                ],
                "techniques": [
                    "T1078"
                ],
                "alertRuleTemplateName": null,
                "incidentConfiguration": {
                    "createIncident": true,
                    "groupingConfiguration": {
                        "enabled": true,
                        "reopenClosedIncident": false,
                        "lookbackDuration": "P2D",
                        "matchingMethod": "AllEntities",
                        "groupByEntities": [],
                        "groupByAlertDetails": [],
                        "groupByCustomDetails": []
                    }
                },
                "eventGroupingSettings": {
                    "aggregationKind": "SingleAlert"
                },
                "alertDetailsOverride": null,
                "customDetails": null,
                "entityMappings": [
                    {
                        "entityType": "Account",
                        "fieldMappings": [
                            {
                                "identifier": "FullName",
                                "columnName": "SourceUserName"
                            }
                        ]
                    }
                ],
                "sentinelEntitiesMappings": null,
                "templateVersion": null
            }
        }
    ]
}